require 'rubygems'  
require 'rake'  
require 'echoe'  
  
Echoe.new('simplecov-csv-more', '0.0.3') do |p|  
  p.description     = "CSV (and more!) formatter for SimpleCov"  
  p.url             = "http://github.com/integrum/simplecov-csv-more"
  p.author          = "Integrum Dudes http://integrumtech.com"
  p.email           = "everyone+github@integrumtech.com"
  p.ignore_pattern  = ["tmp/*", "script/*"]
  p.development_dependencies = []
  p.runtime_dependencies = ['simplecov']
end
